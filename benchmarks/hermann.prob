types
    x1: Finite(0,1)
    x2: Finite(0,1)
    x3: Finite(0,1)
end

x1 = Bernoulli(0.5)
x2 = Bernoulli(0.5)
x3 = Bernoulli(0.5)
while true:
    if x1 == x3:
        x1 = Bernoulli(0.5)
    else:
        x1 = x3
    end

    if x2 == x1:
        x2 = Bernoulli(0.5)
    else:
        x2 = x1
    end

    if x3 == x2:
        x3 = Bernoulli(0.5)
    else:
        x3 = x2
    end
end
