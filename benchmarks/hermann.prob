types
    x1: Finite(0,1)
    x2: Finite(0,1)
    x3: Finite(0,1)
end

x1 = Bernoulli(0.5)
x2 = Bernoulli(0.5)
x3 = Bernoulli(0.5)
while true:
    x1o, x2o, x3o = x1, x2, x3

    if x1o == x3o:
        x1 = Bernoulli(1/2)
    else:
        x1 = x3o
    end

    if x2o == x1o:
        x2 = Bernoulli(1/2)
    else:
        x2 = x1o
    end

    if x3o == x2o:
        x3 = Bernoulli(1/2)
    else:
        x3 = x2o
    end
end
